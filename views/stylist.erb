<h1>Stylist Details for <%= @stylist.name %></h1>
<h4>Clients:</h4>
<ul>
    <% @stylist.clients.each do |client| %>
      <li><a href="/clients/<%= client.id %>"><%= client.name %></a></li>
    <% end %>
</ul>
<h4>Add client to this Stylist:</h4>
<form action="/stylists/<%= @stylist.id %>" method="post">
  <div class="form-group">
    <select id="clients" name="clients">
      <% @all_clients.each do |client| %>
        <option value="<%= client.id %>"> <%= client.name %></option>
      <% end %>
    </select>
    <button id="submit" type="submit" class="btn btn-info">Save</button>
  </div>
</form>
<h4>Delete This Stylist:</h4>
<form action="/stylist_delete" method="post">
  <div class="form-group">
    <input type="hidden" name="_method" value="delete">
    <input type="hidden" name="stylist_id" value="<%= @stylist.id %>">
    <button class="btn btn-danger" name="delete" id="delete">Delete</button>
  </div>
</form>
